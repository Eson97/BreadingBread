@using BreadingBread.Application.UseCases.ReportSales.Queries.GetSalesReportList
@model GetSalesReportListResponse
@{
    ViewData["Title"] = "Home";
}
<div class="col mt-4">
    <div class="row">
        <div class="col-12">
            <table class="table table-hover datatable"
                   id="tableSales">
                <thead class="thead-dark">
                    <tr>
                        <td>Ruta</td>
                        <td>Vendedor</td>
                        <td>Fecha de inicio</td>
                        <td>Fecha de fin</td>
                        <td>Importe</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sale in Model.Sales)
                    {
                        <tr>
                            <td>@sale.Ruta</td>
                            <td>@sale.Vendedor</td>
                            <td>@sale.FechaInicio.ToString("d")</td>
                            <td>@sale.FechaFin.ToString("d")</td>
                            <td>@sale.Importe.ToString("#.#")</td>
                            <td>
                                <a asp-area="" asp-controller="ReportSales"
                               asp-action="DownloadReportSale"
                               asp-route-idUserSale="@sale.IdUserSale"
                                   class="btn btn-secondary"
                                   target="_blank">Descargar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $('#tableSales').DataTable();
    });
</script>